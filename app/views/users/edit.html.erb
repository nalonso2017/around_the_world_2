<!-- Validation failure messages -->
<% if @users.errors.any? %>
  <% @users.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit User #<%= @users.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_users/<%=@users.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @users.name %>">
      </div>

      <!-- Label and input for age -->
      <div class="form-group">
        <label for="age" class="control-label">
          Age
        </label>

        <input type="text" id="age" name="age" placeholder="Age" class="form-control" value="<%= @users.age %>">
      </div>

      <!-- Label and input for home -->
      <div class="form-group">
        <label for="home" class="control-label">
          Home
        </label>

        <input type="text" id="home" name="home" placeholder="Home town" class="form-control" value="<%= @users.home %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @users.photo %>">
      </div>




      <button class="btn btn-warning">
        Update User
      </button>
      or
      <a href="/users/<%= @users.id %>">Cancel</a>
    </form>
  </div>
</div>
