<div class="page-header">
  <h3>User #<%= @users.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
        <dd><%= @users.name %></dd>

      <dt>Age</dt>
      <dd><%= @users.age %></dd>

      <dt>Home</dt>
      <dd><%= @users.home %></dd>

      <dt>Photo</dt>
      <dd><img src="<%= @users.photo %>"   width="100"></dd>

      

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
      <a href="/users/<%= @users.id %>/edit" class="btn btn-warning">
        Edit
      </a>
    </div>
  </div>
</div>
