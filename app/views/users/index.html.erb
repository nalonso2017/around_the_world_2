<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Email</th>
        <th>Home town</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= user.email %></td>
        <td><%= user.home %></td>
        <td><img src="<%= user.photo %>"   width="100"></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
          <a href="/users/<%= user.id %>/edit" class="btn btn-warning">Edit</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
