<div class="page-header">
  <h1>
    Cities
    <a href="/cities/new" class="btn btn-lg btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>
  </h1>
</div>

<%= search_form_for @q do |f| %>
  <p class="lead">Search cities:</p>

  <div class="form-group">
    <%= f.label :country_cont, "By country" %>
    <%= f.text_field :country_cont, :class => "form-control", :placeholder => "Country" %>
  </div>

  <div class="form-group">
    <%= f.label :name_cont, "By city" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "City" %>
  </div>



  <%= f.submit :class => "btn btn-primary" %>

  <a href="/cities" class="btn btn-default">Clear filters</a>
<% end %>



<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>Actions</th>
      </tr>

      <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.country %></td>
        <td>
          <a href="/cities/<%= city.id %>" class="btn btn-primary">Show</a>
          <a href="/cities/<%= city.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_city/<%= city.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
