<div class="page-header">
  <h3>Recommendation #<%= @recommendation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Notes</dt>
      <dd><%= @recommendation.notes %></dd>

      <dt>User</dt>
      <dd><%= @recommendation.user_id %></dd>

      <dt>Category</dt>
      <dd><%= @recommendation.category %></dd>

      <dt>City</dt>
      <dd><%= @recommendation.city_id %></dd>

      <dt>Image</dt>
      <dd> <img src="<%= @recommendation.image %>"></dd>

      <dt>Name</dt>
      <dd><%= @recommendation.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/recommendations" class="btn btn-primary">
        Back
      </a>
      <a href="/recommendations/<%= @recommendation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_recommendation/<%= @recommendation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
